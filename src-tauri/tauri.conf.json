{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "trench-coat",
  "version": "0.1.0",
  "identifier": "com.ijustghost.trenchcoat",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Trench Coat",
        "width": 480,
        "height": 480,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
